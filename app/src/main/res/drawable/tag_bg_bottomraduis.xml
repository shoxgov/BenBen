<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="3pt"
                android:bottomRightRadius="3pt" />
            <!--    边框颜色    -->
            <solid android:color="@color/line_color" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <!--    边框里面的颜色    -->
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="3pt"
                android:bottomRightRadius="3pt" />
        </shape>
    </item>
</layer-list>

