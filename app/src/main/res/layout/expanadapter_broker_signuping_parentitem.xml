<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainbg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/broker_signuping_parent_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售代表"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/broker_signuping_parent_position_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000-6500元"
            android:textColor="@color/textred"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/broker_signuping_parent_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/broker_signuping_parent_position_addr"
            android:singleLine="true"
            android:text="长沙和阳医疗器械有限公司"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_normal" />


        <TextView
            android:id="@+id/broker_signuping_parent_position_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="长沙.岳麓区"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_normal" />
    </RelativeLayout>

</LinearLayout>