<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.benben.bb.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightBtnBackground="@mipmap/share_blackbg"
        app:rightBtnText="分享"
        app:rightBtnTextcolor="@color/textblack"
        app:showRightBtn="true"
        app:titleName="二维码名片" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/person_qr_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--      <Space
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="8" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/person_invite_icon" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="20dip"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:scaleType="fitCenter"
                android:src="@mipmap/person_qr_iconbg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/my_person_qr_img"
                android:layout_width="@dimen/icon_qr_width"
                android:layout_height="@dimen/icon_qr_width"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/my_person_qr_benbenid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/whitebg_transparent_corner"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip"
            android:text="我的邀请码："
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />
        <!--
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="10" />-->
        <TextView
            android:id="@+id/my_person_invite_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="已成功邀请20位好友加入职犇犇"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

        <com.benben.bb.view.RecyclerViewSwipeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/qr_invite_bg"
            app:dividerColor="@color/transparent"
            app:dividerHeight="0dip" />

        <!-- <ListView
             android:id="@+id/my_person_list"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="10dip"
             android:background="@drawable/qr_invite_bg" />-->
    </LinearLayout>

</LinearLayout>