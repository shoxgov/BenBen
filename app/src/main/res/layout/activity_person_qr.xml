<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.benben.bb.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightBtnBackground="@mipmap/share_blackbg"
        app:rightBtnText="分享"
        app:rightBtnTextcolor="@color/textblack"
        app:showRightBtn="true"
        app:titleName="二维码名片" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/person_qr_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:scaleType="fitCenter"
                android:src="@mipmap/person_invite_icon" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="35"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/person_qr_iconbg" />

                <ImageView
                    android:id="@+id/my_person_qr_img"
                    android:layout_width="@dimen/icon_qr_width"
                    android:layout_height="@dimen/icon_qr_width"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/my_person_qr_benbenid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebg_transparent_corner"
                android:paddingBottom="15dip"
                android:paddingLeft="40dip"
                android:paddingRight="40dip"
                android:paddingTop="15dip"
                android:text="我的邀请码："
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>