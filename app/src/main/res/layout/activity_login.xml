<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <com.benben.bb.view.RoundImageView
        android:layout_width="@dimen/icon_certify_height"
        android:layout_height="@dimen/icon_certify_height"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/logo_bg"
        app:radius="15dip"
        app:type="round" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:text=""
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_large" />

        <ImageView
            android:id="@+id/login_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <EditText
            android:id="@+id/login_msg_code_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@null"
            android:hint="验证码"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_large" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/login_msg_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@color/line_color" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19" />

    <Button
        android:id="@+id/login_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/drawable_loginbtn_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="或"
        android:textColor="@color/textblack"
        android:textSize="@dimen/font_normal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <TextView
        android:id="@+id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:padding="10dip"
        android:text="用密码登录"
        android:textColor="@color/textblack"
        android:textSize="@dimen/font_large" />

    <TextView
        android:id="@+id/login_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="没有账户? 立即注册"
        android:textColor="@color/textblack"
        android:textSize="@dimen/font_small" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="68" />
</LinearLayout>
