<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.benben.bb.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="招聘信息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/mainbg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/gracefull_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="基本信息"
                android:textColor="@color/textblack"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_down_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="所属企业"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/enterprise_recruit_add_ower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="3"
                    android:text="职位名称"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <EditText
                    android:id="@+id/enterprise_recruit_add_position_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请填写"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="3"
                    android:text="招聘人数(人)"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <EditText
                    android:id="@+id/enterprise_recruit_add_people_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请填写"
                    android:singleLine="true"
                    android:text="10"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_down_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="招聘区域"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/enterprise_recruit_add_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:text="全国"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_down_icon"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="截止时间"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/enterprise_recruit_add_endtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="3"
                    android:text="综合薪资(元)"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <EditText
                    android:id="@+id/enterprise_recruit_add_totalsalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请填写"
                    android:singleLine="true"
                    android:text="3000-6000"
                    android:textColor="@color/textblack"
                    android:textColorHint="@color/textgreydim"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="佣金类型"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_small" />

                <RadioGroup
                    android:id="@+id/recruit_detail_commission_settle_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/recruit_detail_commission_settle_type_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/commission_settle_selector"
                        android:checked="true"
                        android:text=" 一次性"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/font_small" />

                    <RadioButton
                        android:id="@+id/recruit_detail_commission_settle_type_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/commission_settle_selector"
                        android:text=" 按月结"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/font_small" />

                    <RadioButton
                        android:id="@+id/recruit_detail_commission_settle_type_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/commission_settle_selector"
                        android:text=" 按小时结"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/font_small" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="佣金金额(元)"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_normal" />

                <EditText
                    android:id="@+id/recruit_detail_commission_settle_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bottom_bg"
                    android:hint="请填写"
                    android:inputType="numberDecimal"
                    android:padding="5dip"
                    android:text=""
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="佣金说明"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_normal" />

            <EditText
                android:id="@+id/enterprise_recruit_commission_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/edittext_background"
                android:gravity="left|top"
                android:hint="佣金其它说明"
                android:minLines="3"
                android:padding="5dip"
                android:textColorHint="@color/gray_dark"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="福利待遇"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:id="@+id/tag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip">

                <EditText
                    android:id="@+id/enterprise_recruit_add_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/edittext_bottom_bg"
                    android:gravity="center"
                    android:padding="5dip" />

                <TextView
                    android:id="@+id/enterprise_recruit_add_tag_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/edittext_background"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip"
                    android:text="自定义添加"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/mainbg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:drawableLeft="@mipmap/detail_indicator_salary"
                android:drawablePadding="5dip"
                android:text="薪资待遇"
                android:textColor="@color/textblack"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enterprise_recruit_salary_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/edittext_background"
                android:gravity="left|top"
                android:hint="薪资待遇"
                android:minLines="5"
                android:padding="5dip"
                android:textColorHint="@color/gray_dark"
                android:textSize="@dimen/font_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/mainbg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:drawableLeft="@mipmap/detail_indicator_food"
                android:drawablePadding="5dip"
                android:text="食宿情况"
                android:textColor="@color/textblack"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enterprise_recruit_doorm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/edittext_background"
                android:gravity="left|top"
                android:hint="食宿情况"
                android:minLines="5"
                android:padding="5dip"
                android:textColorHint="@color/gray_dark"
                android:textSize="@dimen/font_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/mainbg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:drawableLeft="@mipmap/detail_indicator_demand"
                android:drawablePadding="5dip"
                android:text="职位说明"
                android:textColor="@color/textblack"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enterprise_recruit_position_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/edittext_background"
                android:gravity="left|top"
                android:hint="职位说明"
                android:minLines="5"
                android:padding="5dip"
                android:textColorHint="@color/gray_dark"
                android:textSize="@dimen/font_small" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/enterprise_recruit_add_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/bluetheme"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />
</LinearLayout>