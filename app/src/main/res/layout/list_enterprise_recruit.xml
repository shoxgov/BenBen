<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enterprise_recruit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/recruit_sb"
            android:singleLine="true"
            android:text="行政主管"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <com.benben.bb.view.SwitchButton
            android:id="@+id/recruit_sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_checked="true"
            app:sb_checked_color="@color/bluetheme"
            app:sb_show_indicator="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/enterprise_recruit_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@+id/recruit_cb"
        android:singleLine="true"
        android:text="300.0元/小时"
        android:textColor="@color/textred"
        android:textSize="@dimen/font_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"
        android:background="@color/mainbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:text="就业顾问补帖："
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/enterprise_recruit_commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="5"
            android:text="10.0元/小时"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/enterprise_recruit_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:text="招聘人数："
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/enterprise_recruit_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="5"
            android:text="196人"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:text="截止时间："
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/enterprise_recruit_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="5"
            android:text="2018-5-16"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_small" />

    </LinearLayout>
</LinearLayout>