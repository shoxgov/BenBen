<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.benben.bb.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="找回密码" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/mainbg" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:text="忘记密码"
        android:textColor="@color/textblack"
        android:textSize="@dimen/font_huge"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:text="收到验证码"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <EditText
            android:id="@+id/findpwd_vertify_code_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="1"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/findpwd_vertify_code_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="2"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/findpwd_vertify_code_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="3"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/findpwd_vertify_code_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="4"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/findpwd_vertify_code_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="5"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/findpwd_vertify_code_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rect_background"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:text="6"
            android:textColor="@color/textblack"
            android:textSize="@dimen/font_huge"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:gravity="right"
        android:text="10S后重新发送"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/font_small" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19" />

    <Button
        android:id="@+id/findpwd_vertify_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/drawable_loginbtn_bg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="68" />
</LinearLayout>
